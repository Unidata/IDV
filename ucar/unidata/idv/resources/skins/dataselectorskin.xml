<?xml version="1.0" encoding="UTF-8"?>
<skin>
  <ui>
    <panel layout="border">
      <idv.menubar place="North"/>
      <panel
         place="Center"
         layout="border">
        <panel
           layout="flow"
           place="North">
          <idv.toolbar
             id="idv.toolbar"
             place="West"/>
          <panel
             id="idv.favoritesbar"
             place="North"/>
        </panel>
        <splitpane
           orientation="v"
           resizeweight="0.75"
           continuous="false"
           onetouchexpandable="true">
          <idv.view
             place="Center"
             properties="size=400:500;"/>
          <idv.dataselector
             id="idv.dataselector"
             place="South"/>
        </splitpane>
      </panel>
      <idv.statusbar place="South"  id="bottom_bar"/>
    </panel>
  </ui>
  <styles>
    <style
       class="iconbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip);ui.setBorder(this,etched);"
       mouse_exit="ui.setText(idv.messagelabel,);ui.setBorder(this,button);"/>
    <style
       class="textbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip)"
       mouse_exit="ui.setText(idv.messagelabel,)"/>
  </styles>
  <components/>
  <properties>
    <property
       name="icon.wait.wait"
       value="/ucar/unidata/idv/images/wait.gif"/>
  </properties>
</skin>
