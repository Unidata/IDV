<harvesters>

  <harvester    name="Source Files"
                active="true"
		class="ucar.unidata.repository.PatternHarvester"
		xrootdir="c:/cygwin/home/jeffmc/unidata/src/idv/trunk/ucar"
		rootdir="/harpo/jeffmc/src/idv/trunk/ucar"
		basegroup="Files/Source"
		filepattern=".*"
		type="file"
                monitor="false"
		sleep="1"/>



  <harvester    name="Pictures"
                active="true"
                class="ucar.unidata.repository.PatternHarvester"
		xrootdir="c:/cygwin/home/jeffmc/pictures"
		rootdir="/home/jeffmc/pictures"
		basegroup="Files/Images"
		filepattern=".*\.jpg$|.*\.jpeg$|.*\.gif$|.*\.png$"
		type="image"
                monitor="false"
		sleep="1"/>


  <harvester    name="IDD/NIDS"
                active="true"
                class="ucar.unidata.repository.PatternHarvester"
		xrootdir="c:/cygwin/home/jeffmc/unidata/data/repository/NIDS"
		rootdir="/data/ldm/gempak/nexrad/NIDS"
		basegroup="IDD/NIDS"
		filepattern="([^/]+)/([^/]+)/[^/]+_(\d\d\d\d\d\d\d\d_\d\d\d\d)"
		type="level3radar"
		columns = "station,product"
		patternnames="station,product,fromDate"
		patterntypes="string,string,date"
		grouptemplate = "${station}/${product}"
		nametemplate="${station}-${product}-${fromDate}"
		desctemplate= "${name} description"
                monitor="false"
		sleep="1"/>


   <harvester   name="IDD/Craft"
                active="false"
                class="ucar.unidata.repository.PatternHarvester"
		rootdir="/data/ldm/gempak/nexrad/craft"
		basegroup="IDD/Craft"
		filepattern="([^/]+)/[^/]+_(\d\d\d\d\d\d\d\d_\d\d\d\d)"
		type="level2radar"
		columns = "station"
		patternnames="station,fromDate"
		patterntypes="string,date"
		grouptemplate = "${station}"
		nametemplate="${station}-${fromDate}"
		desctemplate= "${name} description"
                monitor="false"
		sleep="1"/>






   <harvester   name="IDD/Gempak Grids"
                active="false"
                class="ucar.unidata.repository.PatternHarvester"
		rootdir="/data/ldm/gempak/model"
		basegroup="IDD/Gempak Model Grids"
		filepattern="/([^/]+)/(\d\d\d\d\d\d\d\d\d\d).*_(.*)\.gem"
		type="model"
                dateformat="yyyyMMddHH"
		columns = "modelgroup,modelrun"
		patternnames="modelgroup,fromDate,modelrun"
		patterntypes="string,date,string"
		grouptemplate = "${modelgroup}/${modelrun}"
                nametemplate = "${modelgroup}-${modelrun}-${fromDate}"
		desctemplate= "${name} description"
                monitor="false"
		sleep="1"/>



   <harvester   name="IDD/Satellite"
                active="false"
                class="ucar.unidata.repository.PatternHarvester"
		rootdir="/data/ldm/gempak/images/sat"
		basegroup="IDD/Satellite"
		filepattern="([^/]+)/([^/]+)/([^/]+)/[^/]+(\d\d\d\d\d\d\d\d_\d\d\d\d)"
		type="satellite"
		columns = "platform,resolution,product"
		patternnames="platform,resolution,product,fromDate"
		patterntypes="string,string,string,date"
		grouptemplate = "${platform}/${resolution}/${product}"
		nametemplate="${platform}-${resolution}-${product}-${fromDate}"
		desctemplate= "${name}"
                monitor="false"
		sleep="1"/>




</harvesters>
		