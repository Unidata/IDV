<canvas bgimage="%root%/logo.gif">
<graph>

    <edgetype name="groupedby" arrow="-6" />       
    <edgetype name="taggedby" arrow="-6" color="blue"/>       
    <edgetype name="etc" arrow="-6" color="red"/>       

<nodetype    name="Node"  />

<nodetype    name="tag" parent="Node" fillcolor="0,153,153">
  <command label="Search tag" command="url(,%root%/searchform?tag=%id%)"/>
  <shape>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" id="rect" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
  <shape  layout="h" src="rect" from="n" to="s" >
    <image url="%root%/Tag.png" alt="Tag"/>
   </shape>
  </shape>
</nodetype>


<nodetype    name="group" parent="Node" fillcolor="#cccccc">
  <command label="View group" command="url(,%root%/showgroup?group=%id%)"/>
  <command label="Search group" command="url(,%root%/searchform?group=%id%)"/>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
</nodetype>


<nodetype    name="skip" parent="Node" fillcolor="red">
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
</nodetype>


<nodetype    name="entry" parent="Node" fillcolor="255,255,153" imagepath="%root%/File.gif">
  <command label="View entry" command="url(,%root%/showentry?id=%id%)"/>
  <shape>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" id="rect" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>

  <shape  layout="h" src="rect" from="n" to="s" >
    <image url="%root%/%imagepath%"
           alt="Tag"/>
   </shape>
  </shape>
</nodetype>


<nodetype    name="level3radar" parent="entry" alt="Level 3 Radar" imagepath="%root%/Radar.gif"/>

%content%


</graph>
</canvas>
