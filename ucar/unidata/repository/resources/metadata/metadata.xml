<?xml version="1.0" encoding="ISO-8859-1"?>
<metadata>

  <handler category="Tags">

    <type name="Group Test" type="grouptest" searchable="true" browsable="true">
      <element name="Group" datatype="group">
            <element name="attr1" />
	    <element name="attr2" datatype="enumeration"  values="apples,bananas,cherries"/>
      </element>
   </type>


<!--
    <type name="Test" type="test" searchable="true" browsable="true">
      <element name="attr1" />
