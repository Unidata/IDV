<?xml version="1.0" encoding="ISO-8859-1"?>
<metadata>

  <handler category="Tags">


    <type name="Tag" id="enum_tag" searchable="true" browsable="true">
      <element name="Tag Value" />
      <template type="thredds"><![CDATA[<keyword>${attr1}</keyword>]]></template>
    </type>

    <type name="Wiki Category" id="wikicategory" foruser="false">
      <element name="Wiki Category" />
    </type>

    <type name="GCMD Science Keyword" id="enum_gcmdkeyword" searchable="true" browsable="true">
      <element
         name="Keyword"
         datatype="enumeration"
         values="file:/ucar/unidata/repository/resources/metadata/dif/gcmdkeywords.txt"/>
      <template type="thredds"><![CDATA[<keyword>${attr1}</keyword>]]></template>
    </type>


  </handler>

  <handler class="ucar.unidata.repository.metadata.ContentMetadataHandler"        category="Attachments, Contact, Etc.">
    <type
       name="Thumbnail Image"
       id="content.thumbnail">
      <element name="Thumbnail File" datatype="file" thumbnail="true"/>
    </type>
    <type
       name="File Attachment"
       id="content.attachment">
      <element name="File" datatype="file" thumbnail="false"/>
    </type>
    <type name="Contact" id="content.contact">
      <element name="Name" />
      <element name="Email" />
    </type>

    <type name="Display Timezone" id="content.timezone">
      <element
         default="GMT"
         name="Timezone"/>
    </type>


    <type name="Biography" id="content.biography">
      <element
         default=""
         name="Bio"
	 rows="10"/>
    </type>


    <type name="Sort Order" id="content.sort">
      <element
         default="fromdate"
         name="Field"
         datatype="enumeration"
         values="fromdate:From Date,todate:To Date,createdate:Create Date,name:Name"/>
      <element
         default="true"
         name="Ascending"
         datatype="boolean"/>
    </type>
    <type
       name="Alias"
       id="content.alias">
      <element name="Alias" />
      <template type="html"><![CDATA[<a href="${root}/alias/${attr1}">${attr1}</a>]]></template>
    </type>
  </handler>

  <handler adminonly="true" class="ucar.unidata.repository.metadata.AdminMetadataHandler" category="Admin">
    <type name="Page Template" id="admin.template"/>
    <type name="Local File Pattern" id="admin.localfile.pattern"/>
    <type name="Anonymous Upload" id="admin.anonymousupload">
      <element name="From" />
      <element name="IP" />
    </type>
  </handler>


</metadata>
